<%- include('../partials/header') %>
<%- include('../partials/nav') %>
<table class="table my-5 table-hover col-8" style="margin-left: 20%;">
    <thead>
      <tr>
        <th scope="col" class="col-8">Pitanja</th>
        <th scope="col" class="col-4">Akcije</th>
      </tr>
    </thead>
    <tbody>
        <% for(let i=0;i<questions.length;i++) { %>
            <tr>
            <td><%- questions[i].question %></td>
                <td class="row">
                <a href="/question/update/<%- questions[i].id %>" role="button" class="icon-btn orange mx-1"><i class="fas fa-edit"></i></a>
                <!-- <form action="" class="mx-1"> -->
                    <a class="icon-btn red" type="submit" href="/question/delete/<%- questions[i].id %>"><i class="fas fa-trash-alt"></i></a>
                <!-- </form> -->
                </td>
            </tr>
        <% } %>
    </tbody>
  </table>
  <div class="col-8 form-group text-right" style="margin-left: 20%;">
    <tr class="text-right">
        <div class="form-control">
            <a href="/question/insert" class="btn btn-primary" >Dodajte pitanje</a>
        </div>
    </tr>

  </div>