<script>
    var x=[];
    var obj={};
</script>
<% questions.forEach(element=> {%>
        <script>
            obj= {
                id:'<%= element.id %>',
                question: '<%= element.question %>',
                first_answer: '<%= element.first_answer %>',
                second_answer: '<%= element.second_answer %>',
                third_answer: '<%= element.third_answer %>',
                fourth_answer: '<%= element.fourth_answer %>',
                true_answer: '<%= element.true_answer %>',
            }
            x.push(obj);
        </script>
<% }) %>


