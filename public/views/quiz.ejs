                <button class="form-control answers" data-src="3" id="answer_3"></button>
            </div>
            <div class="form-group col-md-4 " style="margin-left: 10%;">
                <!-- <label for="inputEmail4">Email</label> -->
                <button class="form-control answers" data-src="4" id="answer_4"></button>
            </div>
        </div>
        <div class="form-group text-right px-5" style="margin-right: 8%;">
            <button class="btn btn-danger" id="next_question">Sledece</button>
        </div>
    </div>

</div>
